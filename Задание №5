using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            int ax = 8;
            int ay = 4;
            int bx = 12;
            int by = 10;
            double ras = Math.Sqrt(Math.Pow(bx - ax, 2) + Math.Pow(by - ay, 2));
            Console.WriteLine(ras);
        }
    }
}

