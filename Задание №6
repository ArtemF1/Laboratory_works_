№1
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            byte A = 8;
            byte B = 15;
            byte C = 0;
            if (A != B)
            {
                C = A;
                A = B;
            }
            if (A == B)
            {
                B = C;
            }
            Console.WriteLine(A);
            Console.WriteLine(B);


        }
    }
}

