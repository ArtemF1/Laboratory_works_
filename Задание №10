№1
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите число A: ");
            int A = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите число B: ");
            int B = Convert.ToInt32(Console.ReadLine());
            if (A > 2 && B<=3)
            {
                Console.WriteLine("{0} > 2 и {1} <= 3 - Истина", A, B);
            }
            else
            {
                Console.WriteLine("{0} > 2 и {1} <= 3 - Ложь", A, B);
            }
        }
    }
}
№2
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите число A: ");
            int A = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите число B: ");
            int B = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите число С: ");
            int C = Convert.ToInt32(Console.ReadLine());
            if (A < B && A < C && B < C) 
            {
                Console.WriteLine("{0} < {1} < {2} - Истина", A, B,C);
            }
            else
            {
                Console.WriteLine("{0} < {1} < {2} - Ложь", A, B, C);
            }
        }
    }
}
№3
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите целое положительное число: ");
            int x = Convert.ToInt32(Console.ReadLine());
            if(x>9 && x<100 && (x % 2 == 0)) 
            {
                Console.WriteLine("Данное число является четным двузначным");
            }
            else
            {
                Console.WriteLine("Данное число не является четным двузначным");
            }
        }
    }
}
№4
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите трехзначное число: ");
            int x = Convert.ToInt32(Console.ReadLine());
            int a = x / 100;
            int b = x / 10 % 10;
            int c = x % 10;
            if((a < b && a < c && b < c) || (a > b && a > c && b > c))
            {
                Console.WriteLine("Цифры данного числа образуют возрастающую или убывающую последовательность");
            }
            else
            {
                Console.WriteLine("Цифры данного числа не образуют возрастающую или убывающую последовательность");
            }
        }
    }
}
№5
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите четырехзначное число: ");
            int x = Convert.ToInt32(Console.ReadLine());
            int a = x / 1000;
            int b = x / 100 % 10;
            int c = x / 10 % 10;
            int d = x % 10;
            if (a == d && b == c)             {
                Console.WriteLine("Данное число читается одинаково слева направо и справа налево");
            }
            else
            {
                Console.WriteLine("Данное число читается не одинаково слева направо и справа налево");
            }
        }
    }
}
№6
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Сторона а треугольника ABC = ");
            int a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Сторона b треугольника ABC = ");
            int b = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Сторона c треугольника ABC = ");
            int c = Convert.ToInt32(Console.ReadLine());
            if((a*a==b*b+c*c) ||(b*b == a*a + c*c) || (c*c == a*a + b * b))
            {
                Console.WriteLine("Треугольник со сторонами a, b, c является прямоугольным");
            }
            else
            {
                Console.WriteLine("Треугольник со сторонами a, b, c не является прямоугольным");
            }

        }
    }
}
№7
using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Сторона а треугольника ABC = ");
            int a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Сторона b треугольника ABC = ");
            int b = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Сторона c треугольника ABC = ");
            int c = Convert.ToInt32(Console.ReadLine());
           if((a + b > c)&&(a + c > b) && (b + c > a))
            {
                Console.WriteLine("Существует треугольник со сторонами a, b, c");
            }
            else
            {
                Console.WriteLine("Не существует треугольник со сторонами a, b, c");
            }
        }
    }
}
